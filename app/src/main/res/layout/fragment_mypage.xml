<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="?attr/back_img">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pola_primary"
            android:textSize="20dp"
            android:text="설정"
            android:gravity="center"
            android:padding="13dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:weightSum="10"
            android:background="?attr/colorAccent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/mypage_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/pola_day_gray"
                android:text="성해은"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:background="@drawable/box_border"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keywordToggleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="키워드 추천"/>

            <Switch
                android:id="@+id/keywordToggleBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:minHeight="48dp"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="10dp" />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/themeBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:background="@drawable/box_border"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="테마"/>
            <TextView
                android:id="@+id/currentThemeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8.6"
                android:textSize="13dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_primary"
                android:text="현재 모드 출력"/>

            <ImageButton

                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/vector"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintRight_toRightOf="parent"
                />



        </LinearLayout>


        <LinearLayout
            android:id="@+id/logoutBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:background="@drawable/box_border"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/logoutTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9.6"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="로그아웃"/>


            <ImageButton

                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/vector"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintRight_toRightOf="parent"
                />


        </LinearLayout>
        <LinearLayout
            android:id="@+id/secessionBtn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/secessionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9.6"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="탈퇴"/>


            <ImageButton

                android:layout_width="11dp"
                android:layout_height="13dp"
                android:src="@drawable/vector"
                android:scaleType="fitXY"
                android:background="@null"
                app:layout_constraintRight_toRightOf="parent"
                />



        </LinearLayout>
    </LinearLayout>

</FrameLayout>