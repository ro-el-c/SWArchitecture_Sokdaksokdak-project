<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MypageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="20"
        android:background="?attr/back_img">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/pola_primary"
            android:textSize="20dp"
            android:text="속닥속닥"
            android:gravity="center"
            android:padding="13dp"
            />
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:gravity="center"
            android:weightSum="10"
            android:background="?attr/colorAccent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/mypage_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textSize="30dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/pola_day_gray"
                android:text="성해은"/>

            <TextView
                android:id="@+id/mypage_birth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="4"
                android:text="2000.00.00"
                android:textColor="@color/pola_day_gray"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/keywordToggleTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="7"
                android:text="키워드 영구 추천"
                android:textColor="@color/pola_day_gray"
                android:textSize="18dp" />

            <Switch
                android:id="@+id/keywordToggleBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="2"
                android:minHeight="48dp"
                android:textOff="OFF"
                android:textOn="ON"
                android:textSize="10dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/themeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="테마"/>
            <TextView
                android:id="@+id/currentThemeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:textSize="15dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_primary"
                android:text="현재 모드 출력"/>

            <Button
                android:id="@+id/themeBtn"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_round"
                android:layout_weight="2"
                android:textSize="10dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/logoutTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="로그아웃"/>

            <Button
                android:id="@+id/logoutBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:background="@drawable/button_round"
                android:textSize="10dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@color/white"
            android:weightSum="10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/secessionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:textSize="18dp"

                android:layout_margin="10dp"
                android:textColor="@color/pola_day_gray"
                android:text="탈퇴"/>

            <Button
                android:id="@+id/secessionBtn"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/button_round"
                android:textSize="10dp" />


        </LinearLayout>
    </LinearLayout>

</FrameLayout>